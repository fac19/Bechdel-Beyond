{
	"extends": [
		"react-app",
		"plugin:jsx-a11y/recommended",
		"prettier",
    "prettier/react",
    "plugin:cypress/recommended"
	],
	"rules": {
		"prefer-promise-reject-errors": "off",
		"max-len": [
			"error",
			{
				"code": 150,
				"ignoreComments": true,
				"ignoreUrls": true
			}
		],
		"react/jsx-filename-extension": [1, {
			"extensions": [".js", ".jsx"]
		}],
		"react/jsx-one-expression-per-line": [0]
	},
	"plugins": ["jsx-a11y", "cypress"],
	"env": {
		"es6": true,
		"jest": true,
    "browser": true,
    "cypress/globals": true
	}
}